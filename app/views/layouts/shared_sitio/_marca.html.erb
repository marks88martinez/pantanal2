                <section class="brands-carousel">
                        <h2 class="sr-only">Brands Carousel</h2>
                        <div class="container">
                            <div id="owl-brands" class="owl-brands owl-carousel unicase-owl-carousel owl-outer-nav">
        
                                    <% @marca.each do |marca| %>

                                    
                                    <div class="item">
                                        
                                        <%= link_to   sitio_path(marca) do %>
                                     
                    
                                       
                    
                                            <figure>
                                                <figcaption class="text-overlay">
                                                    <div class="info">
                                                        <h4><%= marca.nombre %></h4>
                                                    </div><!-- /.info -->
                                                </figcaption>
                                                <%= image_tag marca.image.url(:medium) %>
                    
                                            </figure>
                                        <% end %>
                                    </div><!-- /.item -->
                                    
                                    
                                    <% end %>

        
                            </div><!-- /.owl-carousel -->
        
                        </div>
                    </section>
          
    