                            <div class="ad col-xs-12 col-sm-4">
                                <div class="media">
                                    <div class="media-left media-middle">
                                       
                                        <img data-echo="/template_sitio/assets/images/banner/cameras.jpg" src="/template_sitio/assets/images/blank.gif" alt="">
